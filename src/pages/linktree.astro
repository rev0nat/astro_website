---
import Card from "../components/linktree/card.astro";
import Chip from "../components/linktree/chip.astro";
import "../styles/animation.css";

type Link = {
  desc: string;
  link: string;
  icon: string;
};

// Put all your links here
const links: Link[] = [
  {
    desc: "Dogma's Pull",
    link: "open.spotify.com/intl-fr/track/0T5tM0mD9CZq9D67TaFRpB?go=1&sp_cid=9a8a587cec93b2cd1e9711e5cf067ea2",
    icon: "/images/dogmaspull.png",
  },
  {
    desc: "Space Boy",
    link: "open.spotify.com/intl-fr/track/6LxpLh5zGplbQ37zheubOz?si=ee5211ceaa1744bd&nd=1&dlsi=7d2e0809b61b422d",
    icon: "/images/spaceboy.png",
  },
  {
    desc: "Soul Eaters",
    link: "open.spotify.com/intl-fr/track/49KsjZdBmXszHHEg0Ji0Mg?si=43fdf85759654c4e&nd=1&dlsi=5ab12d892f8f4d1f",
    icon: "/images/souleaters.png",
  },
];
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/x-icon' href='/favicon.png' />
    <meta name='viewport' content='width=device-width' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
      integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content='Useful links of Anteo' />
    <meta name='author' content='Anteo' />
    <meta property='og:title' content='Anteo' />
    <meta property='og:image' content='favicon.png' />
    <meta property='og:description' content='Linktree of Anteo' />
    <meta property='twitter:description' content='Linktree of Anteo' />
    <meta property='twitter:title' content='Anteo' />
    <meta property='twitter:image' content='favicon.png' />
    <meta name='twitter:card' content='summary' />
    <meta name='twitter:site' content='@BremNeville' />
    <title>ANTEO</title>
    <style>
      @font-face {
        font-family: Plunct;
        src: url(/fonts/plunct.otf) format('opentype');
        font-display: swap;
      }
    </style>
  </head>
  <body
    class='bg-[#1e1e1e] flex justify-center items-center w-screen h-screen font-[Plunct] text-white'
  >
    
    <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
      {Array.from({ length: 10 }).map(() => {
        const falls = ["fall", "fall-slow", "fall-fast", "fall-inverted", "fall-slow-inverted", "fall-fast-inverted"];
        const logoSize = ["50px", "75px", "88px", "77px"]
        const randomFall = falls[Math.floor(Math.random() * falls.length)];
        const randomSize = logoSize[Math.floor(Math.random() * logoSize.length)]
      
        return (
          <video
            autoplay loop muted playsinline
            class={`w-24 absolute -translate-x-1/2 top-0 ${randomFall}`}
            style={`left:${Math.random()*100}%;animation-delay:${1+Math.random()*4}s;width:${randomSize}`}
          >
            <source src="/animations/logo-small.webm" type="video/webm" />
          </video>
        );
      })}
    </div>
    <main class='w-[80%] flex flex-col gap-8'>
      <h1 class='md:text-6xl text-4xl font-black text-center'>ANTE.O</h1>
      <div class='grid justify-center gap-4'>
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div>
      <div class='flex justify-center gap-8'>
        <!-- Put some social links who have a definitive icon here: -->
        <Chip link='https://www.deezer.com/fr/artist/281613751' icon='fa-brands fa-deezer' />
        <Chip link='https://open.spotify.com/intl-fr/artist/5wk0zTbmF5c71b96RzIu0q' icon='fa-brands fa-spotify' />
        <Chip link='https://music.apple.com/us/artist/ante-o/1834490670?l=fr-FR' icon='fa-brands fa-apple' />
      </div>
      <p class='text-center mx-auto'>Cold plunges make you cold.</p>
    </main>
  </body>
</html>